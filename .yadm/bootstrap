#!/usr/bin/env zsh

umask g-w,o-w
cd "$HOME"

# Install Oh My Zsh
[[ ! -n $ZSH ]] && ZSH=$HOME/.oh-my-zsh
[[ ! -f $ZSH/oh-my-zsh.sh ]] && {
    cd "$ZSH"
    git init
    git remote add origin 'https://github.com/robbyrussell/oh-my-zsh.git'
    git pull origin master
    cd "$HOME"
}

# Init submodules
yadm submodule update --recursive --init

# Init vim
make -C .vim init
