# create a new LXC container
lxc-create -n <name> -t debian

# list containers
lxc-ls

# list containers (fancy/useful output)
lxc-ls -f

# start a container (foreground)
lxc-start -n <name>
# background (much more useful)
lxc-start -n <name> -d

# connect onto a running container
lxc-attach -n <name>

# stop a container
lxc-stop -n <name>

# destroy a container
lxc-destroy -n <name>
