# Create new ext4 encrypted partition
cryptsetup -c aes-xts-plain64 -s 512 -h sha512 -i 5000 0y luksFormat /dev/sdX
cryptsetup luksOpen /dev/sdX encrypted
mkfs.ext4 /dev/mapper/encrypted

# Mount encrypted partioion
cryptsetup luksOpen /dev/sdX encrypted
mount /dev/mapper/encrypted /mnt/encrypted

# Umount encrypted partioion
umount /mnt/encrypted
cryptsetup luksClose encrypted
