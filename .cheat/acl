# Get ACL
getfacl <file>

# Add or modify ACL on file
setfacl -m u:name:rX <file>
setfacl -m g:name:rw <file>
setfacl -m o::- <file>

# or provide all permissions in one
setfacl -m u::rwx,g:sodor:rX,o::- <file>

# Copy ACL from file-A to file-B
getfacl file-A | setfacl -M - file-B

# Apply ACL recursivelly to directory
setfacl -R -m u:name:rX <directory>

# Delete ACL
setfacl -x u:name,g:name <file>

# Delete all ACL on file, including default
setfacl -b <file>

# Same operations works for default ACLs
setfacl -m d:u:name:rx <directory>
setfacl -x d:u:name <directory>

# Delete only default ACLs
setfacl -k <directory>
