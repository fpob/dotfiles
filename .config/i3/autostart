#!/bin/sh

# Settings Demon
mate-settings-daemon &

# Keyring
gnome-keyring-daemon -dl &

# Applets
nm-applet &
mate-volume-control-applet &
mate-power-manager &

# X compositor
compton -b &

# Dropdown terminal
tilda &

# Swap CapsLock and Escape
setxkbmap -option caps:escape &

# Wallpaper
test -x ~/.fehbg && ~/.fehbg &

# Conky on background
test -x ~/.config/conky/conky-bg && ~/.config/conky/conky-bg &

# Applications
test -x ~/.autostart && ~/.autostart &
