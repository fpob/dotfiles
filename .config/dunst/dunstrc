[global]
font = Noto Sans 10
# Enable markup.
# http://developer.gnome.org/pango/stable/PangoMarkupFormat.html
markup = full
# The format of the message.
format = "<b>%s</b>\n%b\n%p"
# Disable icons.
icon_position = off
# The geometry of the window: [{width}]x{height}[+/-{x}+/-{y}]
width = 320
origin = top-right
offset = 5x30
# Draw a line between two # notifications.
separator_height = 1
# Define a color for the separator.
separator_color = frame
# Frame around notification window.
frame_width = 1
frame_color = "#000000"
# Padding between text and separator.
padding = 5
horizontal_padding = 10
# Which monitor should the notifications be displayed on.
monitor = 0
# Display notification on monitor with keyboard focus. Monitor option is
# ignored.
follow = keyboard
# dmenu commands.
dmenu = rofi -dmenu -p dunst:

# Don't show notification over focused fullscreen windows.
[fullscreen_pushback_all]
fullscreen = pushback

[urgency_low]
background = "#1A1B1C"
foreground = "#838485"
timeout = 5

[urgency_normal]
background = "#363738"
foreground = "#F5F6F7"
timeout = 10

[urgency_critical]
background = "#C72E2E"
foreground = "#FFFFFF"
timeout = 0

# vim: ft=dosini
