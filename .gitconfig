[include]
    path = ~/.gitconfig.local

[core]
    editor = vim
    autocrlf = input
    pager = less -KRFX

[commit]
    # Show 'diff --cached' when writing commit message
    verbose = true

[diff]
    tool = vimdiff
    guitool = gvimdiff
    algorithm = patience
    ignoreSubmodules = untracked

[fetch]
    prune = true
    pruneTags = true

[grep]
    lineNumber = true
    patternType = perl

[log]
    date = iso
    decorate = true

[merge]
    ff = false
    tool = vimdiff
    guitool = gvimdiff

[pull]
    rebase = true

[push]
    default = current

[rebase]
    autoSquash = true
    missingCommitsCheck = error

[status]
    showStash = true
    ignoreSubmodules = untracked

[alias]
    s = status

    # show hash of current commit
    h = rev-parse --verify HEAD
    hs = rev-parse --short --verify HEAD

    l = log -n 10 --date-order --oneline
    ll = log -n 10 --graph --date-order --show-signature --stat
    la = log --all --graph --date-order --oneline
    lla = log --all --graph --date-order --show-signature --stat

    a = add
    aa = add -A
    au = add -u
    ap = add --patch
    # undo add
    ua = reset HEAD
    uap = reset --patch HEAD

    d = diff
    dm = diff master
    dc = diff --cached

    c = commit
    ca = commit --amend
    can = commit --amend --no-edit
    cf = commit --fixup
    cfh = commit --fixup HEAD
    # undo commit
    uc = reset --soft HEAD~

    b = branch
    bm = branch -m
    bd = branch --delete
    # delete merged branch except current, master and develop
    bdm = !git branch --merged | grep -vE '^(\\* |  (master|develop)$)' | xargs -r git branch --delete

    ch = checkout
    chm = checkout --merge
    chb = checkout -b
    chbm = checkout -b --merge

    m = merge
    mc = merge --continue
    ma = merge --abort

    rb = rebase
    rbm = rebase master
    rbi = rebase --interactive
    rbim = rebase --interactive master
    rbc = rebase --continue
    rba = rebase --abort
    rbs = rebase --skip

    f = fetch
    fa = fetch --all --tags

    pl = pull --recurse-submodules
    plo = pull --recurse-submodules origin
    plu = pull --recurse-submodules upstream

    po = push origin
    poa = push origin --all --follow-tags
    pot = push origin --tags
    pu = push upstream
    pua = push upstream --all --follow-tags
    put = push upstream --tags

    rs = remote show
    rso = remote show origin
    rsu = remote show upstream

    st = stash
    stl = stash list --stat
    sts = stash show --patch

    bi = bisect

    cl = clean -d --interactive

    w = worktree
    wl = worktree list
    wa = worktree add
    wp = worktree prune

    sub = submodule
    suba = submodule add
    subu = submodule update

    ffs = flow feature start
    ffc = flow feature checkout
    fff = flow feature finish --fetch --no-ff
    fbs = flow bugfix start
    fbc = flow bugfix checkout
    fbf = flow bugfix finish --fetch --no-ff
    fhs = flow hotfix start
    fhf = flow hotfix finish --fetch
    frs = flow release start
    frf = flow release finish --fetch

    dt = difftool
    dtc = difftool --cached
    mt = mergetool
